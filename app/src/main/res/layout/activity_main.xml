<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pet.myapplication.MainActivity"
    android:id="@+id/mlayout"
    android:background="#ffbe7e">

    <Button
        android:id="@+id/generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Generate"
        android:background="#812326"/>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="315sp"
        android:layout_height="400sp"

        android:layout_below="@+id/generate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp">


        <ImageView
            android:id="@+id/taxtak"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/board2" />

        <TextView
            android:id="@+id/zar2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/zar1"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/zar1"
            android:layout_marginBottom="150dp"
            android:text=""
            android:textColor="#ff1a00"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/zar1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_above="@+id/zar2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:text=""
            android:textColor="#ff1a00"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Start"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </RelativeLayout>


</RelativeLayout>
